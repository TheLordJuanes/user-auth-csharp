@page
@model RazorPagesUser.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Index";
}


<script type="text/javascript">
    window.onload = function () {
        document.getElementById("username").innerHTML = "@ViewData["Message"]";
        };
</script>


<div class="text-center">
    <h1 class="display-4">RPC :: Red de Programaci?n Competitiva</h1>
    <a asp-page="Index">Logout</a>
    <p id="username"></p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].BirthDate)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.User)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
            </tr>
        }
    </tbody>
</table>