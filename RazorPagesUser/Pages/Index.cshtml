@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">RPC :: Red de Programación Competitiva</h1>
</div>

<div>
    <form>
        <p><strong>Sign in</strong></p>
        <hr />
        <p>User Name:</p>
        <input type="text" asp-for="SearchString" />
        <p>Password:</p>
        <input type="text" asp-for="Passwordp" />
        <br />
        <br />
        <input asp-page="Users/Index" type="submit" value="Sign In" class="btn btn-primary"/>
        <br />
        <br />
        <p> Currently unlogged and/or the credentials are wrong</p>
        <hr />
        <p><strong>New User</strong></p>
        <input asp-page="Users/Create" type="submit" value="Sign Up" class="btn btn-primary"/>
    </form>
</div>
